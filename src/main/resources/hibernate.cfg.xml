<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
    <property name="hibernate.connection.username">postgres</property>
    <property name="hibernate.connection.password">postgres</property>
    <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/Project</property>
    <mapping class="com.project.framework.model.Cuenta"/>
    <mapping class="com.project.framework.model.Idioma"/>
    <mapping class="com.project.framework.model.Rango"/>
    <mapping class="com.project.framework.model.Control"/>
    <mapping class="com.project.framework.model.PreguntaSeguridad"/>
    <mapping class="com.project.framework.model.Usuario"/>
    <mapping class="com.project.framework.model.Continente"/>
    <mapping class="com.project.framework.model.Aplicacion"/>
  </session-factory>
</hibernate-configuration>
