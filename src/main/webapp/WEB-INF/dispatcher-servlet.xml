<?xml version='1.0' encoding='UTF-8' ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://www.springframework.org/schema/context
                           http://www.springframework.org/schema/context/spring-context.xsd
                           http://www.springframework.org/schema/mvc
                           http://www.springframework.org/schema/mvc/spring-mvc.xsd" >
    
    <!-- Activa el modelo de programaci칩n Spring MVC @Controller, @RequeastMapping, etc -->
    <mvc:annotation-driven />
    
    <!-- Escanea la ruta y crea los Bean @Controller, @Repository, @Service, etc -->
    <context:component-scan base-package="com.project" />
    
    <!-- Indica la ruta de los recursos -->
    <!--<mvc:resources mapping="/resources/**" location="/resources/" />-->
    <!--<mvc:resources mapping="/webjars/**" location="/webjars/" />-->
    
    <!-- Intercepta el par치metro 'lang' para definir el idioma en la cookie -->
    <mvc:interceptors>
        <bean class="org.springframework.web.servlet.i18n.LocaleChangeInterceptor">
              <property name="paramName" value="lang"></property>
        </bean>
    </mvc:interceptors>
    
    <!-- Indica la ruta de los paquetes de idiomas, su codificaci칩n y activamos el
         texto por defecto  -->
    <bean class="org.springframework.context.support.ReloadableResourceBundleMessageSource" id="messageSource">
        <property name="basenames" value="/resources/bundles/languages/language,
                                          /resources/bundles/messages/message,
                                          /resources/bundles/errors/error"></property>
        <property name="useCodeAsDefaultMessage" value="true"></property>
        <property name="defaultEncoding" value="UTF-8"></property>
    </bean>
    
    <!-- Resuelve el idioma de la web a partir del guardado en la cookie,
         del asignado al navegador o el especificado por defecto -->
    <bean class="org.springframework.web.servlet.i18n.SessionLocaleResolver" id="localeResolver" />
    
    <!-- Indica la ruta de las vistas y la extensi칩n con las que se tratan -->
    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver" id="viewResolver">
        <property name="prefix" value="/WEB-INF/views/"></property>
        <property name="suffix" value=".jsp"></property>
    </bean>
    
</beans>
