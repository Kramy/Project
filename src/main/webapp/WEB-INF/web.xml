        <param-name>jqueryVersion</param-name>
        <param-value>${jquery.version}</param-value>
    </context-param>
    
    <context-param>
        <param-name>fontAwesomeVersion</param-name>
        <param-value>${font-awesome.version}</param-value>
    </context-param>
    
</web-app>